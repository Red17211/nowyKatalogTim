<%- include('../../fragments/header.ejs') %>
<main>
    <script type="application/javascript" src="/js/validationDodajPytanie.js"></script>
    <h2><%= pageTitle %></h2>

    <form class="form" method="post" action="<%=formAction%>" novalidate>
        <input type="hidden" name="_id" id="_id" placeholder="" value="<%= question._id %>"
            <%= (formMode == 'showDetails') ? 'disabled' : '' %>/>


        <label for="question">Pytanie:<span class="symbol-required">*</span></label>
        <input type="text" class="<%= validationErrors.find(e => e.path.includes('question')) ? 'error-input' : '' %>" name="question" id="question" placeholder="5-60 znaków" value="<%= question.question %>"
            <%= (formMode == 'showDetails') ? 'disabled' : '' %>/>
        <span class="errors-text" id="cont">
             <% if (validationErrors.find(e => e.path.includes('question'))) { %>
                  <%= validationErrors.find(e => e.path.includes('question')).message %>
            <% } %>
        </span>

        <label for="answer1">Odpowiedź 1:<span class="symbol-required">*</span></label>
        <input type="text" class="<%= validationErrors.find(e => e.path.includes('answer1')) ? 'error-input' : '' %>" name="answer1" id="answer1" placeholder="3-60 znaków" value="<%= question.answer1 %>"
            <%= (formMode == 'showDetails') ? 'disabled' : '' %>/>
        <span class="errors-text" id="errorResponse1" >
             <% if (validationErrors.find(e => e.path.includes('answer1'))) { %>
                  <%= validationErrors.find(e => e.path.includes('answer1')).message %>
             <% } %>
        </span>

        <label for="answer2">Odpowiedź 2:<span class="symbol-required">*</span></label>
        <input type="text" class="<%= validationErrors.find(e => e.path.includes('answer2')) ? 'error-input' : '' %>" name="answer2" id="answer2" placeholder="3-60 znaków" value="<%= question.answer2 %>"
            <%= (formMode == 'showDetails') ? 'disabled' : '' %>/>
        <span id="errorResponse2" class="errors-text">
             <% if (validationErrors.find(e => e.path.includes('answer2'))) { %>
                  <%= validationErrors.find(e => e.path.includes('answer2')).message %>
             <% } %>
        </span>

        <label for="answer3">Odpowiedź 3:<span class="symbol-required">*</span></label>
        <input type="text" class="<%= validationErrors.find(e => e.path.includes('answer3')) ? 'error-input' : '' %>" name="answer3" id="answer3" placeholder="3-60 znaków" value="<%= question.answer3 %>"
        <%= (formMode == 'showDetails') ? 'disabled' : '' %>/>
        <span id="errorResponse3" class="errors-text">
             <% if (validationErrors.find(e => e.path.includes('answer3'))) { %>
                  <%= validationErrors.find(e => e.path.includes('answer3')).message %>
             <% } %>
        </span>

        <label for="correctAnswer">Poprawna odpowiedź:<span class="symbol-required">*</span></label>
        <input type="text" class="<%= validationErrors.find(e => e.path.includes('correctAnswer')) ? 'error-input' : '' %>" name="correctAnswer" id="correctAnswer" placeholder="3-60 znaków" value="<%= question.correctAnswer %>"
            <%= (formMode == 'showDetails') ? 'disabled' : '' %>/>
        <span id="errorCorrectAnswer" class="errors-text">
             <% if (validationErrors.find(e => e.path.includes('correctAnswer'))) { %>
                  <%= validationErrors.find(e => e.path.includes('correctAnswer')).message %>
             <% } %>
        </span>

        <label for="subject">Przedmiot:<span class="symbol-required">*</span></label>
        <input type="text" class="<%= validationErrors.find(e => e.path.includes('subject')) ? 'error-input' : '' %>" name="subject" id="subject" placeholder="3-60 znaków" value="<%= question.subject %>"
            <%= (formMode == 'showDetails') ? 'disabled' : '' %>/>
        <span id="errorSubject" class="errors-text">
             <% if (validationErrors.find(e => e.path.includes('subject'))) { %>
                  <%= validationErrors.find(e => e.path.includes('subject')).message %>
             <% } %>
        </span>

        <div id="allForm" class="allErrors Errors"></div>

        <% if (formMode == 'showDetails') { %>
        <div class="section-buttons">
            <a href="/Pytanie/edit/<%= question._id %>" class="form-button-submit">Edytuj</a>
        </div>
        <% } %>

        <% if (formMode == 'showDetails') { %>
        <h2>
            Lista udzielonych odpowiedzi na egzaminach
        </h2>
        <table clss="table-list">
            <thead>
            <tr>
                <th>Pytanie</th>
                <th>Odpowiedz</th>
                <th>Godzina odpowiedzi</th>
            </tr>
            </thead>
            <tbody>

            </tbody>
        </table>
        <% } %>

        <div class="form-buttons">
            <p id="errorsSummary" class="errors-text"></p>
            <% if (formMode != 'showDetails') { %>
                <input class="form-button-submit" type="submit" value="<%=btnLabel%>" />
                <a class="form-button-cancel" href="/Pytanie">Anuluj</a>
            <% } else { %>
                <a class="form-button-cancel" href="/Pytanie">Powrót</a>
            <% } %>
        </div>
        </form>
</main>
 <%- include('../../fragments/footer.ejs') %>