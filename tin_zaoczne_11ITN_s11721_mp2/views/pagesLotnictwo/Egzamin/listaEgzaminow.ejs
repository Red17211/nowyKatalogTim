<%- include('../../fragments/header.ejs') %>

        <main>
            <h2>Lista egzaminów</h2>
            <table id=tabelka" class="table-list">
                <tr>
                                    <th>Id</th>
                                    <th>Data egzaminu</th>
                                    <th>Przedmiot</th>
                                    <th>Godzina rozpoczęcia</th>
                                    <th>Godzina zakońćzenia</th>
                                    <th>PKT do zdobycia</th>
                                    <th>Akcje</th>
                                </tr>
                <tbody>
                            <% for (let exam of exams) { %>
                                <tr>
                                    <td><%= exam._id %></td>
                                    <td><%= exam.examDate.toISOString().split('T')[0] %></td>
                                    <td><%= exam.subject %></td>
                                    <td><%= exam.startTime %></td>
                                    <td><%= exam.endTime %></td>
                                    <td><%= exam.points %></td>
                                    <td>
                                        <a href="../Egzamin/details/<%=exam._id%>" class="list-actions-button-details">Szczegóły</a>
                                        <a href="../Egzamin/edit/<%=exam._id%>" class="list-actions-button-edit">Edytuj</a>
                                        <a href="../Egzamin/delete/<%=exam._id%>" class="list-actions-button-delete">Usuń</a>
                                    </td>
                                </tr>
                                <% } %>
                </tbody>
            </table>
            <p><a href="/Egzamin/dodajEgzamin" class="button-add">Dodaj nowy egzamin</a></p>
        </main>
 <%- include('../../fragments/footer.ejs') %>