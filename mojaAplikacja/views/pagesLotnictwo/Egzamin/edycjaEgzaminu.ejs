<%- include('../../fragments/header.ejs') %>
        <main>
            <h2>Edycja egzaminu</h2>
            <form  id="formularz" class="form" novalidate onsubmit="return validateForm();" action="../edited">
                <div>
                    <label for="myDate">Data egzaminu</label>
                    <input type="date" id="myDate" name="myDate" value="2022-10-15" required>
                    <span id="errorMyDate" class="Errors myDateRequired"></span>
                </div>
                <div>
                    <label for="item">Przedmiot</label>
                    <input type="text" id="item" name="item" placeholder="Przedmiot" value="Człowiek możliwości i jego ograniczenia" required>
                    <span id="errorItem" class="itemRequired Errors"></span>
                </div>
                <div>
                    <label for="startTime">Godzina rozpoczęcia</label>
                    <input type="time" id="startTime" name="startTime" value="10:00" required>
                    <span id="errorStartTime" class="startTimeRequired Errors"></span>
                </div>
                <div>
                    <label for="endTime">Godzina zakończenia</label>
                    <input type="time" id="endTime" name="endTime" value="10:45">
                </div>
                <div>
                    <label for="points">Liczba punktów</label>
                    <input type="number" id="points" name="points" placeholder="Liczba punktów" value="10">
                </div>
                <div id="allForm2" class="allErrors Errors">
                </div>
                <div class="form-buttons">
                    <p id="errorSummary"></p>
                    <input  type="submit" value="Zapisz" class="form-button-submit">
                    <a href="/egzamin" class="form-button-cancel">Anuluj</a>
                </div>
            </form>
        </main>
        
  <%- include('../../fragments/footer.ejs') %>